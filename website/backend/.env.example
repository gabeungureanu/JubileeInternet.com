# =============================================================================
# Jubilee Website Backend - Environment Configuration
# =============================================================================

NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database (same as SSO service)
DATABASE_URL=postgresql://jubilee_sso:dev_password_123@localhost:5432/jubilee_sso_dev

# SSO Integration
SSO_ISSUER_URL=http://localhost:3000
SSO_CLIENT_ID=jubilee-website
SSO_CLIENT_SECRET=

# Domain Registry
DEFAULT_DOMAIN_PRICE_CENTS=300
DOMAIN_REGISTRATION_YEARS_DEFAULT=1
DOMAIN_REGISTRATION_YEARS_MAX=10

# Payment (Stripe) - Optional for development
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Frontend URL
FRONTEND_URL=http://localhost:3002

# Session
SESSION_SECRET=website-session-secret-at-least-32-chars

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true

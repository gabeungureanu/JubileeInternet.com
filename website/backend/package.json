{
  "name": "@inspire/website-backend",
  "version": "0.1.0",
  "description": "Inspire Web Spaces Portal - SSO & Web Space Registry Backend",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:create": "tsx src/db/create-migration.ts",
    "migrate:rollback": "tsx src/db/rollback.ts",
    "seed:dev": "tsx src/db/seed-dev.ts",
    "seed:tlds": "tsx src/db/seed-tlds.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "hono": "^4.5.0",
    "postgres": "^3.4.4",
    "jose": "^5.6.0",
    "zod": "^3.23.8",
    "nanoid": "^5.0.7",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.0",
    "dotenv": "^16.4.5",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tsx": "^4.15.6",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}
